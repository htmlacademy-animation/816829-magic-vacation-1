{
  "name": "magic-vacation",
  "version": "1.0.0",
  "description": "Личный проект «Таинственный отпуск» от HTML Academy",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/scss/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint && eslint source/js/ && npm run mocha",
    "mocha": "mocha -r @babel/register -r regenerator-runtime/runtime source/js/**/*.test.js",
    "build": "webpack",
    "webp": "gulp webp",
    "sprite": "gulp sprite",
    "start": "webpack-dev-server --open"
  },
  "dependencies": {
    "normalize.css": "8.0.1",
    "swiper": "5.3.8",
    "three": "0.115.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.10",
    "@babel/preset-env": "7.16.11",
    "@babel/register": "7.16.9",
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "chai": "4.3.4",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "3.5.1",
    "csso-webpack-plugin": "2.0.0-beta.1",
    "eslint": "6.5.1",
    "eslint-config-htmlacademy": "0.5.2",
    "gulp": "4.0.2",
    "gulp-imagemin": "5.0.3",
    "gulp-rename": "1.4.0",
    "gulp-svgstore": "7.0.1",
    "gulp-webp": "4.0.1",
    "html-loader": "1.1.0",
    "html-webpack-plugin": "4.2.0",
    "jsdom": "19.0.0",
    "lodash": "4.17.15",
    "mini-css-extract-plugin": "0.9.0",
    "mocha": "9.1.4",
    "posthtml": "0.12.0",
    "posthtml-include": "1.2.0",
    "posthtml-loader": "1.0.2",
    "posthtml-parser": "0.4.2",
    "regenerator-runtime": "0.13.9",
    "sass": "1.32.8",
    "sass-loader": "8.0.2",
    "sinon": "12.0.1",
    "sinon-chai": "3.7.0",
    "style-loader": "1.1.3",
    "stylelint": "9.10.1",
    "stylelint-config-htmlacademy": "0.1.4",
    "stylelint-scss": "3.19.0",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "write-file-webpack-plugin": "4.5.1"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ]
}
